env:
    browser: true
    node: true
    es6: true
    mocha: true

rules:
    indent: [2, 4]
    brace-style: 1
    comma-style: [1, "last"]
    default-case: 1
    guard-for-in: 1
    no-floating-decimal: 1
    no-nested-ternary: 1
    no-undefined: 1
    no-multi-spaces: 1
    no-unused-vars: 1
    radix: 1
    space-after-function-name: [1, "never"]
    space-after-keywords: [1, "always"]
    space-before-blocks: 1
    spaced-line-comment: [1, "always", { exceptions: ["-"]}]
    strict: [1, "global"]
    valid-jsdoc: [1, { prefer: { "return": "returns"}}]
    wrap-iife: [2, 'any']
    quotes: [1, 'single']
    react/display-name: 1
    react/jsx-boolean-value: 1
    react/jsx-quotes: 1
    react/jsx-no-undef: 1
    react/jsx-sort-props: 1
    react/jsx-sort-prop-types: 1
    react/jsx-uses-react: 1
    react/jsx-uses-vars: 1
    react/no-did-mount-set-state: 1
    react/no-did-update-set-state: 1
    react/no-multi-comp: 1
    react/no-unknown-property: 1
    react/prop-types: 1
    react/react-in-jsx-scope: 1
    react/self-closing-comp: 1
    react/wrap-multilines: 1

    eqeqeq: 1
    eol-last: 1
    handle-callback-err: 1
    no-comma-dangle: 1
    no-cond-assign: 1
    no-console: 0
    no-constant-condition: 1
    no-control-regex: 1
    no-debugger: 1
    no-dupe-args: 1
    no-dupe-keys: 1
    no-duplicate-case: 1
    no-empty-class: 1
    no-empty: 1
    no-ex-assign: 1
    no-extra-boolean-cast: 1
    no-extra-parens: 0
    no-extra-semi: 1
    no-func-assign: 1
    no-inner-declarations: 1
    no-invalid-regexp: 1
    no-irregular-whitespace: 1
    no-negated-in-lhs: 1
    no-obj-calls: 1
    no-regex-spaces: 1
    no-reserved-keys: 1
    no-sparse-arrays: 1
    no-unreachable: 1
    use-isnan: 1
    valid-jsdoc: 1
    valid-typeof: 1
    no-underscore-dangle: 0
    semi: 0
    semi-spacing: 1
    dot-notation: 1
    space-infix-ops: 1
    comma-spacing: 1
    new-cap: 1
    no-extra-bind: 1
    no-shadow: 1
    no-undef: 1
    no-mixed-spaces-and-tabs: 1
    no-spaced-func: 1
    no-loop-func: 1
    key-spacing: 1
    no-trailing-spaces: 1
    camelcase: 1
    comma-dangle: 1

ecmaFeatures:
    modules: true
    jsx: true

plugins:
    - react